<div class="form">
  <%= simple_form_for (@planet) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file %>
    <%= f.input :price %>
    <%= f.submit class:"btn btn-primary"  %>
    <% end %>
<br>
  <%= link_to "back to list", planets_path, class: "btn btn-light"   %>
</div>
