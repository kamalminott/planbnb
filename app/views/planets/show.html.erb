
<div class="container m-5 p-5">

  <h1 class="planet-title"><strong><%= @planet.name %></strong></h1>
  <div class="show-image-desc">
    <% if @planet.photo.attached? %>
    <%= cl_image_tag (@planet.photo.key) %>
    <% end %>
    <div>
    <h4 class="text-start">Hosted by: <%= @planet.user.first_name %> <%= @planet.user.last_name %></h4>

    <h5 class="text">Price per night: <%= @planet.price%></h5>
    <p><%= @planet.description %></p>
    </div>

  </div>

  <div class="m-6">
  <% if current_user && current_user == @planet.user %>
  <%= link_to "Delete Planet", @planet, class: "btn btn-light", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <%= link_to "Edit planet", edit_planet_path, class: "btn btn-light" %>
  <% end %>
  <%= link_to 'Back To Home', root_path(@planet), class: "btn btn-light" %>
  <%= link_to 'Book', new_booking_path(@planet), class: "btn btn-light" %>
  </div>

</div>
