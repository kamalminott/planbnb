
<div class="container">
  <h1><strong><%= @planet.name %></strong></h1>
  <h2>Hosted by: <%= @planet.user.first_name %> <%= @planet.user.last_name %></h2>

  <h2>Price per night: <%= @planet.price%></h2>
  <p><%= @planet.description %></p>

  <%= link_to "Delete Planet", @planet, class: "btn btn-outline-dark", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <%= link_to "Edit planet", edit_planet_path, class: "btn btn-outline-dark" %>
  <%= link_to 'Back To Home', root_path(@planet), class: "btn btn-outline-dark" %>
  <%= link_to 'Book', new_booking_path(@planet), class: "btn btn-outline-dark" %>
</div>
